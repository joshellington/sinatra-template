<!DOCTYPE html>
<html class='no-js <%= browser.body_class %>'>
  <% unless request.xhr? %>
    <head>
      <meta charset='UTF-8'>
      <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>

      <meta name='viewport' content='width=device-width, initial-scale=1.0'>

      <title><%= @title %></title>
      <%= css :main, media: 'screen, projection' %>
      <%= css :print, media: 'print' %>

      <%= js_cdn :modernizr %>
    </head>
  <% end %>
  <body>
    
    <%= yield %>

    <% unless request.xhr? %>
      <%= js_cdn :jquery %>
      <%= js :application %>
      <%= js_chromeframe %>
    <% end %>
  </body>
</html>